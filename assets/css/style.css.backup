/* 1. Custom Properties */
:root {
  /* Base Theme */
  --bg-primary: #0f172a;
  --bg-secondary: #1e293b;
  --text-primary: #f8fafc;
  --text-secondary: #94a3b8;
  --accent: #3b82f6;
  --accent-hover: #60a5fa;

  /* Typography Scale */
  --font-size-base: 16px;
  --h1-size: clamp(2rem, 5vw + 1rem, 3.5rem);
  --h2-size: clamp(1.5rem, 3vw + 1rem, 2.5rem);
  --body-size: clamp(1rem, 1vw + 0.75rem, 1.125rem);

  /* Spacing */
  --space-unit: clamp(1rem, 2vw, 1.5rem);
  --container-width: 1200px;

  /* Animation */
  --transition-speed: 0.3s;
  --animation-timing: cubic-bezier(0.4, 0, 0.2, 1);

  /* Effects */
  --card-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  --hover-lift: translateY(-2px);
}

/* Light theme */
:root[data-theme='light'] {
  --bg-primary: #ffffff;
  --bg-secondary: #f8fafc;
  --text-primary: #1e293b;
  --text-secondary: #475569;
  --gradient-start: #f1f5f9;
  --gradient-end: #e2e8f0;
  --card-border: rgba(0, 0, 0, 0.05);
  --card-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05),
    0 4px 6px -2px rgba(0, 0, 0, 0.025);
}

/* 2. Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  transition: background-color 0.3s ease, border-color 0.3s ease,
    box-shadow 0.3s ease;
}

html {
  scroll-behavior: smooth;
  scroll-padding-top: 2rem;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  font-family: 'Inter', sans-serif;
  line-height: 1.6;
  background: var(--bg-primary);
  color: var(--text-primary);
}

/* 3. Layout */
.container {
  width: min(100% - 2rem, var(--container-width));
  margin-inline: auto;
  padding: 0 var(--space-unit);
}

/* Section Base Styles */
.section {
  background: var(--bg-secondary);
  border-radius: 1rem;
  box-shadow: var(--card-shadow);
  border: 1px solid var(--card-border);
  opacity: 0;
  transform: translateY(20px);
}

.section.visible {
  animation: fadeInUp 0.6s var(--animation-timing) forwards;
}

/* Section Spacing */
.section {
  margin: 4rem 0;
  padding: 3rem;
  background: var(--bg-secondary);
  border-radius: 1rem;
  box-shadow: var(--card-shadow);
  border: 1px solid var(--card-border);
}

/* Hero Section */
.hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 4rem 0;
  text-align: center;
  margin: 6rem 0;
}

.hero {
  margin: 2rem 0 4rem;
  padding: 3rem 0;
}

@keyframes float {
  0% {
    transform: translateY(0px);
  }

  50% {
    transform: translateY(-10px);
  }

  100% {
    transform: translateY(0px);
  }
}

.profile-image {
  width: 150px;
  height: 150px;
  border-radius: 50%;
  object-fit: cover;
  border: 4px solid var(--accent);
  box-shadow: 0 0 20px rgba(59, 130, 246, 0.2);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  animation: float 6s ease-in-out infinite;
  margin-bottom: 1rem;
  aspect-ratio: var(--profile-ratio);
  width: clamp(120px, 15vw, 150px);
  height: auto;
}

.profile-image:hover {
  transform: scale(1.05);
  box-shadow: 0 0 30px rgba(59, 130, 246, 0.3);
  animation-play-state: paused;
}

h1 {
  font-size: var(--h1-size);
  margin: 1.5rem 0 0.5rem;
  background: linear-gradient(90deg, var(--accent), var(--accent-hover));
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

h2 {
  font-size: var(--h2-size);
}

p {
  font-size: var(--body-size);
}

.tagline {
  color: var(--text-secondary);
  font-size: 1.1rem;
  margin-bottom: 2rem;
}

/* Navigation */
.nav-links {
  display: flex;
  justify-content: center;
  gap: 2rem;
  margin: 2rem 0;
  background: var(--bg-secondary);
  padding: 1rem;
  border-radius: 1rem;
  backdrop-filter: blur(10px);
  box-shadow: var(--card-shadow);
  border: 1px solid var(--card-border);
  padding: 1rem 0;
  border-bottom: 1px solid var(--border-color);
}

.nav-links a {
  color: var(--text-primary);
  text-decoration: none;
  font-weight: 500;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  transition: all 0.3s ease;
}

.nav-links a:hover {
  background: var(--accent);
  color: var(--bg-primary);
}

/* Theme Toggle */
.theme-toggle {
  background: none;
  border: none;
  padding: 0.5rem;
  cursor: pointer;
  color: var(--text-primary);
  border-radius: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.theme-toggle:hover {
  background: var(--accent);
  color: var(--bg-primary);
}

.theme-toggle .sun-icon,
.theme-toggle .moon-icon {
  width: 24px;
  height: 24px;
}

/* Show/hide icons based on theme */
:root[data-theme='light'] .moon-icon,
:root:not([data-theme='light']) .sun-icon {
  display: none;
}

/* Sections */
.section {
  position: relative;
  background: var(--bg-secondary);
  border-radius: 1rem;
  box-shadow: var(--card-shadow);
  border: 1px solid var(--card-border);
  padding: 4rem;
  margin: 8rem 0; /* Increased base margin */
}

.section:first-of-type {
  margin-top: 4rem;
}

.section:last-of-type {
  margin-bottom: 4rem;
}

.section.visible {
  opacity: 1;
  transform: translateY(0);
}

.section-header {
  text-align: center;
  color: var(--accent);
  margin-bottom: 2rem;
}

.category-header {
  text-align: center;
  color: var(--text-primary);
  margin-bottom: 1.5rem;
  font-size: 1.25rem;
}

/* Skills Section */
.skills-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.skill-category {
  background: var(--bg-primary);
  padding: 2rem;
  border-radius: 1rem;
  border: 1px solid var(--card-border);
  box-shadow: var(--card-shadow);
  background: var(--bg-secondary);
  padding: 2rem;
  border-radius: 8px;
  contain: content;
  contain-intrinsic-size: auto 200px;
}

.skill-category h4 {
  color: var(--accent);
  margin-bottom: 1.5rem;
  font-size: 1.1rem;
  text-align: center;
}

.skill-list {
  list-style: none;
  padding: 0;
  display: grid;
  gap: 1rem;
}

.skill-list li {
  padding: 0.75rem 1rem;
  background: var(--bg-secondary);
  border-radius: 0.5rem;
  text-align: center;
  transition: all 0.3s ease;
  border: 1px solid var(--card-border);
  position: relative;
  overflow: hidden;
}

.skill-list li::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  height: 3px;
  width: 100%;
  background: var(--accent);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.3s ease;
}

.skill-list li:hover::after {
  transform: scaleX(1);
}

.skill-list li:hover {
  transform: translateY(-2px);
  background: var(--accent);
  color: var(--bg-primary);
}

.skill-item {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  padding: 1rem;
  background: var(--bg-secondary);
  border-radius: var(--border-radius);
  transition: all var(--transition-speed) ease;
  position: relative;
  overflow: hidden;
}

.skill-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--accent);
  opacity: 0;
  transition: opacity var(--transition-speed) ease;
  z-index: 0;
}

.skill-item:hover::before {
  opacity: 0.1;
}

.skill-item:hover {
  transform: translateX(5px);
}

.skill-name {
  font-weight: 500;
  color: var(--text-primary);
}

.skill-progress {
  height: 6px;
  background: var(--bg-primary);
  border-radius: 3px;
  overflow: hidden;
}

.skill-progress-fill {
  height: 100%;
  background: var(--accent);
  border-radius: 3px;
  transition: width 1s ease-in-out;
  position: relative;
}

.skill-progress-fill::after {
  content: attr(data-level);
  position: absolute;
  right: 0;
  top: -20px;
  font-size: 0.75rem;
  color: var(--text-secondary);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.skill-item:hover .skill-progress-fill::after {
  opacity: 1;
}

/* Projects Section */
.projects-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  width: 100%;
  max-width: 1100px;
  margin: 0 auto;
}

.projects-grid {
  display: grid;
  gap: 2rem;
  width: 100%;
  max-width: 1100px;
  margin: 2rem auto 0;
  padding: 0 1rem;
}

.project-card {
  background: var(--bg-secondary);
  border-radius: var(--border-radius);
  border: 1px solid var(--card-border);
  box-shadow: var(--card-shadow);
  transition: transform 0.3s ease;
  height: 100%;
  display: flex;
  flex-direction: column;
  isolation: isolate;
  will-change: transform;
  transform: translateZ(0);
  backface-visibility: hidden;
  contain: content;
  contain-intrinsic-size: auto 200px;
}

.project-card:hover {
  transform: var(--hover-lift);
  box-shadow: var(--card-hover-shadow);
}

.project-content {
  padding: 2rem;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.project-content h3 {
  color: var(--accent);
  font-size: 1.25rem;
  margin-bottom: 1rem;
}

.project-content p {
  color: var(--text-secondary);
  margin-bottom: 1.5rem;
  flex: 1;
  line-height: 1.6;
}

.meta-container {
  margin-top: auto;
  padding-top: 1.5rem;
  border-top: 1px solid var(--card-border);
}

.tech-stack {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.project-links {
  display: flex;
  gap: 1rem;
  margin-top: 1rem;
}

.project-card:hover {
  transform: translateY(-5px);
}

.project-content {
  padding: 1.5rem;
}

.project-content h3 {
  color: var(--accent);
  font-size: 1.25rem;
  margin-bottom: 1rem;
}

.project-content p {
  color: var(--text-secondary);
  margin-bottom: 1.5rem;
}

.tech-stack {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 0.75rem;
  margin: 1rem 0;
}

.tech-stack span {
  display: flex;
  align-items: center;
  gap: 0.25rem;
  transition: transform 0.2s ease;
}

.tech-stack span:hover {
  transform: translateY(-2px);
}

.project-links {
  display: flex;
  gap: 1rem;
  margin-top: 1.5rem;
}

.project-links a {
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  text-decoration: none;
  font-size: 0.875rem;
}

.project-links a:first-child {
  background: var(--accent);
  color: var(--bg-primary);
}

.project-links a:last-child {
  border: 1px solid var(--accent);
  color: var (--accent);
}

.project-links a:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);
}

.project-stats {
  display: flex;
  gap: 1rem;
  margin: 1rem 0;
  color: var(--text-secondary);
  font-size: 0.9rem;
}

.project-topics {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin: 1rem 0;
}

.topic {
  background: var(--accent);
  color: var(--bg-primary);
  padding: 0.25rem 0.75rem;
  border-radius: 1rem;
  font-size: 0.8rem;
}

.loading-projects {
  text-align: center;
  padding: 2rem;
  color: var(--text-secondary);
}

.error {
  text-align: center;
  padding: 2rem;
  color: #ef4444;
}

.workflow-badge {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 0.25rem;
  background: var(--accent);
  color: var(--bg-primary);
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  font-size: 0.875rem;
  transition: transform 0.2s ease;
}

.workflow-badge:hover {
  transform: translateY(-2px);
}

.workflow-icon {
  width: 16px;
  height: 16px;
  fill: currentColor;
}

.workflow-types {
  font-size: 0.85rem;
  opacity: 0.9;
  padding-left: 0.5rem;
  border-left: 1px solid rgba(255, 255, 255, 0.2);
  margin-left: 0.5rem;
}

.language-tag {
  display: flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.375rem 0.75rem;
  border-radius: 0.5rem;
  background: var(--bg-secondary);
  color: var(--text-primary);
  font-size: 0.875rem;
  transition: transform 0.2s ease;
}

.language-tag:hover {
  transform: translateY(-2px);
}

.lang-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--lang-color);
}

.project-meta {
  display: flex;
  gap: 1rem;
  margin: 1rem 0;
}

.project-stat {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--text-secondary);
  font-size: 0.9rem;
}

.language-tag {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 0.75rem;
  border-radius: 0.5rem;
  background: var(--bg-secondary);
  color: var (--text-primary);
  font-size: 0.875rem;
  transition: transform 0.2s ease;
}

.language-tag:hover {
  transform: translateY(-2px);
}

.language-icon {
  width: 16px;
  height: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.workflow-info {
  display: inline-flex;
  gap: 0.5rem;
  margin-left: auto;
}

.workflow-item {
  display: inline-flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.375rem 0.75rem;
  border-radius: 0.5rem;
  background: var (--accent);
  color: var(--bg-primary);
  font-size: 0.875rem;
  transition: transform 0.2s ease;
}

.workflow-item:hover {
  transform: translateY(-2px);
}

.icon {
  width: 16px;
  height: 16px;
  fill: currentColor;
}

.meta-container {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin: 1rem 0;
}

.github-link {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  background: var(--accent);
  color: var(--bg-primary);
  font-size: 0.875rem;
  text-decoration: none;
  transition: all 0.2s ease;
}

.github-link:hover {
  transform: translateY(-2px);
  opacity: 0.9;
}

.github-link .icon {
  width: 16px;
  height: 16px;
  fill: currentColor;
}

.tech-stack,
.workflow-info {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.workflow-info {
  margin-left: auto;
}

.language-tag,
.workflow-item {
  display: inline-flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.375rem 0.75rem;
  border-radius: 0.5rem;
  background: var(--bg-secondary);
  color: var(--text-secondary);
  font-size: 0.875rem;
  transition: all 0.2s ease;
}

.language-tag:hover,
.workflow-item:hover {
  transform: translateY(-2px);
  color: var(--accent);
}

.language-icon,
.workflow-item .icon {
  width: 16px;
  height: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.workflow-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 16px;
  height: 16px;
}

.workflow-icon svg {
  width: 100%;
  height: 100%;
  fill: currentColor;
}

.language-tag svg,
.workflow-item svg {
  width: 16px;
  height: 16px;
  vertical-align: middle;
  margin-right: 4px;
}

.workflow-item {
  color: var(--bg-primary);
  background: var(--accent);
  padding: 4px 8px;
  border-radius: 4px;
  display: inline-flex;
  align-items: center;
  gap: 4px;
}

.language-tag {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  padding: 4px 8px;
  border-radius: 4px;
  background: var(--bg-secondary);
  color: var(--text-primary);
}

.social-links {
  display: flex;
  gap: 1rem;
  margin-top: 1rem;
}

.social-link,
.email-link {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: var(--text-primary);
  text-decoration: none;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  background: var(--bg-secondary);
  transition: all 0.3s ease;
}

.social-link:hover,
.email-link:hover {
  background: var(--accent);
  color: var(--bg-primary);
  transform: translateY(-2px);
}

.social-link svg,
.email-link svg {
  width: 24px;
  height: 24px;
}

.social-icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background: var(--bg-secondary);
  transition: all 0.3s ease;
  contain: content;
  contain-intrinsic-size: auto 48px;
}

.social-icon:hover {
  background: var(--accent);
  transform: translateY(-2px);
}

.social-icon svg {
  width: 24px;
  height: 24px;
  color: var(--text-primary);
}

.social-icon:hover svg {
  color: var(--bg-primary);
}

.contact-links {
  display: flex;
  flex-direction: column;
  gap: 1rem;
  margin-top: 1rem;
  justify-content: center;
  gap: 1rem;
  margin-top: 2rem;
}

.contact-link {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1rem;
  border-radius: 0.5rem;
  background: var(--bg-secondary);
  transition: all 0.3s ease;
  text-decoration: none;
  color: var(--text-primary);
}

.contact-link:hover {
  background: var(--accent);
  transform: translateY(-2px);
}

.contact-link svg {
  width: 24px;
  height: 24px;
}

/* Footer Specific */
footer {
  text-align: center;
  padding: 3rem 0;
  color: var(--text-secondary);
  border-top: 1px solid var(--card-border);
  margin-top: 8rem;
  background: var(--bg-secondary);
}

footer .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

footer p {
  font-size: 0.9rem;
  opacity: 0.8;
  transition: opacity 0.3s ease;
  margin: 0.5rem 0;
}

footer p:hover {
  opacity: 1;
}

footer {
  margin-top: 6rem;
  padding: 3rem 0;
}

@media (max-width: 768px) {
  .container {
    padding: 1rem;
    width: 95%;
  }

  .hero {
    padding: 2rem 0;
  }

  .profile-image {
    width: 140px;
    height: 140px;
  }

  h1 {
    font-size: 1.8rem;
  }

  .tagline {
    font-size: 1rem;
  }

  .nav-links {
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    padding: 0.75rem;
    gap: 0.5rem;
  }

  .nav-links a {
    padding: 0.5rem 0.75rem;
    font-size: 0.9rem;
  }

  .section {
    padding: 3rem;
    margin: 6rem 0;
  }

  .projects-grid {
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  .project-card {
    margin: 0 0.5rem;
  }

  .project-content {
    padding: 1.25rem;
  }

  .project-content h3 {
    font-size: 1.1rem;
  }

  .tech-stack {
    gap: 0.375rem;
  }

  .tech-stack span {
    font-size: 0.8rem;
    padding: 0.2rem 0.5rem;
  }

  .about-text {
    padding: 0 1rem;
  }

  .about-text p {
    font-size: 0.95rem;
    margin-bottom: 1.25rem;
  }

  .about-text .intro {
    font-size: 1rem;
  }

  .skills-container {
    padding-top: 1.5rem;
    margin-top: 2rem;
  }

  .skills-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  .skill-category {
    padding: 1.25rem;
  }

  .skill-list li {
    padding: 0.5rem 0.75rem;
    font-size: 0.9rem;
  }

  .section-header {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
  }

  .category-header {
    font-size: 1.1rem;
    margin-bottom: 1.25rem;
  }

  .project-content {
    padding: 1.5rem;
  }

  .project-content h3 {
    font-size: 1.1rem;
  }

  .project-content p {
    font-size: 0.95rem;
  }
}

@media (max-width: 480px) {
  .container {
    padding: 0.75rem;
  }

