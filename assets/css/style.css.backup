/* Add these new styles for better light mode appearance */
:root[data-theme='light'] {
  .profile-image {
    box-shadow: 0 0 30px rgba(59, 130, 246, 0.15);
  }

  .project-card:hover {
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05),
      0 10px 10px -5px rgba(0, 0, 0, 0.02);
  }

  .nav-links a:hover {
    background: var(--accent);
    color: white;
  }

  .tech-stack span {
    background: rgba(59, 130, 246, 0.05);
  }

  .svg-icon-changes {
    fill: var(--text-secondary);
  }

  .svg-icon-changes:hover {
    fill: var(--accent);
  }
}

/* Update the gradient text for better visibility in light mode */
:root[data-theme='light'] h1 {
  background: linear-gradient(90deg, #1e40af, #3b82f6);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* Add subtle transitions for theme switching */
*,
*::before,
*::after {
  transition: background-color 0.3s ease, border-color 0.3s ease,
    box-shadow 0.3s ease;
}

.about-content {
  max-width: 800px;
  margin: 0 auto;
}

.about-text {
  margin-bottom: 3rem;
  line-height: 1.6;
}

.about-text p {
  margin-bottom: 1.5rem;
  line-height: 1.8;
  font-size: 1.05rem;
}

.about-text .intro {
  font-size: 1.2rem;
  color: var(--text-primary);
  font-weight: 500;
  margin-bottom: 1.5rem;
}

.skills-container {
  padding-top: 2rem;
  border-top: 1px solid var(--card-border);
  margin-top: 3rem;
}

.skills-container h3 {
  text-align: center;
  margin-bottom: 2.5rem;
  color: var(--accent);
  font-size: 1.5rem;
}

.skills-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  max-width: 900px;
  margin: 0 auto;
}

.skill-category {
  background: var(--bg-primary);
  padding: 2rem;
  border-radius: 1rem;
  border: 1px solid var(--card-border);
  box-shadow: var(--card-shadow);
  background: var(--bg-secondary);
  padding: 2rem;
  border-radius: 8px;
}

.skill-category h4 {
  color: var(--accent);
  margin-bottom: 1.5rem;
  font-size: 1.1rem;
  text-align: center;
}

.skill-list {
  list-style: none;
  padding: 0;
  display: grid;
  gap: 1rem;
}

.skill-list li {
  padding: 0.75rem 1rem;
  background: var(--bg-secondary);
  border-radius: 0.5rem;
  text-align: center;
  transition: all 0.3s ease;
  border: 1px solid var(--card-border);
  position: relative;
  overflow: hidden;
}

.skill-list li::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  height: 3px;
  width: 100%;
  background: var(--accent);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.3s ease;
}

.skill-list li:hover::after {
  transform: scaleX(1);
}

.skill-list li:hover {
  transform: translateY(-2px);
  background: var(--accent);
  color: var(--bg-primary);
}

.skill-item {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  padding: 1rem;
  background: var(--bg-secondary);
  border-radius: var(--border-radius);
  transition: all var(--transition-speed) ease;
  position: relative;
  overflow: hidden;
}

.skill-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: var(--accent);
  opacity: 0;
  transition: opacity var(--transition-speed) ease;
  z-index: 0;
}

.skill-item:hover::before {
  opacity: 0.1;
}

.skill-item:hover {
  transform: translateX(5px);
}

.skill-name {
  font-weight: 500;
  color: var(--text-primary);
}

.skill-progress {
  height: 6px;
  background: var(--bg-primary);
  border-radius: 3px;
  overflow: hidden;
}

.skill-progress-fill {
  height: 100%;
  background: var(--accent);
  border-radius: 3px;
  transition: width 1s ease-in-out;
  position: relative;
}

.skill-progress-fill::after {
  content: attr(data-level);
  position: absolute;
  right: 0;
  top: -20px;
  font-size: 0.75rem;
  color: var(--text-secondary);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.skill-item:hover .skill-progress-fill::after {
  opacity: 1;
}

@media (max-width: 768px) {
  .skills-grid {
    grid-template-columns: 1fr;
