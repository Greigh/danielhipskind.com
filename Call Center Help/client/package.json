{
  "name": "adamas",
  "version": "1.0.0",
  "description": "Adamas - A powerful web application that assists call center agents with tasks that many have to use separate tools for, such as note taking, call summarization, and CRM integration.",
  "browser": {
    "crypto": "crypto-browserify",
    "stream": "stream-browserify",
    "vm": "vm-browserify"
  },
  "alias": {
    "process": "process/browser"
  },
  "main": "src/main.js",
  "sideEffects": [
    "src/js/main.js"
  ],
  "scripts": {
    "start": "node server.js",
    "test": "jest --runInBand",
    "test:e2e": "npm run build:webpack && node test/e2e/run-e2e.js",
    "dev": "NODE_OPTIONS='--no-deprecation' NODE_ENV=development webpack serve --mode development",
    "sass": "sass src/styles/main.scss:src/styles/main.css --style compressed",
    "sass:watch": "sass --watch src/styles/main.scss:src/styles/main.css",
    "build:webpack": "NODE_ENV=production webpack --mode production",
    "build:dev": "npm run build:webpack && node build.js",
    "build": "npm run clean && npm run build:webpack && node build.js",
    "clean": "node clean-build.js",
    "upload": "npm run build && sh upload.sh",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "tsc": "tsc",
    "server:dev": "PORT=8080 nodemon server.js",
    "dev:local": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "deploy": "../../deploy.sh"
  },
  "author": "Daniel Hipskind aka Greigh",
  "license": "CC BY-NC-ND",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.28.5",
    "@playwright/test": "^1.57.0",
    "@sentry/node": "^10.32.1",
    "@types/bcryptjs": "^3.0.0",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "assert": "^2.1.0",
    "babel-jest": "^30.2.0",
    "babel-loader": "^10.0.0",
    "buffer": "^6.0.3",
    "concurrently": "^9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "events": "^3.3.0",
    "html-webpack-plugin": "^5.6.5",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "mini-css-extract-plugin": "^2.9.4",
    "os-browserify": "^0.3.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "sass": "^1.97.1",
    "sass-loader": "^16.0.6",
    "stream-browserify": "^3.0.0",
    "terser-webpack-plugin": "^5.3.16",
    "typescript": "^5.9.3",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "body-parser": "^2.2.1",
    "chart.js": "^4.5.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.1",
    "multer": "^2.0.2",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.12",
    "openai": "^6.15.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "twilio": "^5.11.1",
    "winston": "^3.19.0"
  }
}
